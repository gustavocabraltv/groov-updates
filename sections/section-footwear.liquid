    .text-names h2 {
        position: absolute; /* Volte para absolute */
        bottom: 2px; /* Coloca no fundo */
        left: 54%; /* Posiciona no meio do container */
        transform: translateX(-50%) rotate(2deg); /* Centraliza perfeitamente */
        margin: 0;
        color: black!important;
        font-size: 12px;
        z-index: 2;
        text-align: center;
