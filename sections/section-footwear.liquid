        draggable: false;
    }
    .feature-container[data-description="3"] .feature-description__title {
           width: 80%;
    }
     .footwear__heading {
            font-size: 40px;
            font-weight: 600;
            line-height: 40px;
            width: 100%;
            z-index: 1;
    }
    .feature-container {
            width: 180px;
            z-index: 2;

    }

    .feature-container[data-description="2"] {
      width: 239px;
    }


        {% comment %} .image-container img {

            width: auto;
            height: 690px;
            object-fit: contain;
            transform: translateX(40px);
            pointer-events: none;
            user-select: none;
            -webkit-user-drag: none;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            draggable: false;

        } {% endcomment %}




        .feature-container[data-description="1"] {
            right: 0;
            top: 165px;
            {% comment %} align all element to the right {% endcomment %}


        }

        .feature-container[data-description="2"] {
            top: 281px;
            left: 0;

        }

        .feature-container[data-description="3"] {
            bottom: 217px;
            right: 0;
        }

        .feature-container h2 {
            font-size: 14px;
            font-weight: 600;
        }




  }
</style>

<div class="footwear section-{{ section.id }}-padding">
  <div class="layer">&nbsp;</div>
  <div class="page-width">
    <div class="footwear__inner">
      {% comment %} <img src="{{ 'fingers.png' | asset_url }}" alt="Insole Hands" width="auto" height="auto" class="fingers"> {% endcomment %}
