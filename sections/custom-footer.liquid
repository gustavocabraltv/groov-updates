<style>
{% comment %} .custom-footer-section{
  padding-top:50px;
  padding-bottom:50px;
}
.index section.custom-footer-section {
  display: none;
}
.custom-footer-section .main-wrapper{
  display:flex;
  justify-content: space-between;
}
.custom-footer-section .menu-list-wrap{
  display: flex;
  justify-content: space-between;
}
.custom-footer-section .first-div{
  width:15%;
}
.custom-footer-section .second-div{
  width:65%;
  display: flex;
  flex-direction: column;
  gap: 16px;
}
.custom-footer-section .third-div{
  width:20%;
  display:flex;
  justify-content: flex-end;
}
.custom-footer-section .menu-title {
  /* font-family: 'Proxima Nove'; */
  font-weight: 600;
  color: #90939c;
  cursor: pointer;
  text-decoration: none;
}
.custom-footer-section .copy-right {
  /* font-family: 'Proxima Nove'; */
  line-height: normal;
  color: #98a0aa;
}
span.copy_right_content {
  padding-right: 6px;
}
  a.menu-title:nth-last-child(1) {
    border-bottom: none;
}
        @media (max-width: 550px){
          .custom-footer-section .menu-title {
    border-bottom: 1px solid #000000bf;
}
          .custom-footer-section{
            padding:20px 0;
          }
          .custom-footer-section .first-div{
            display:none;
          }
          .custom-footer-section .third-div{
            display:none;
          }
          .custom-footer-section .second-div{
            width:100%;
          }
          .custom-footer-section .menu-list-wrap{
            flex-direction:column;
            gap:15px;
          }
        } {% endcomment %}
        .hr-vertical {
          width: 1px;
          height: 20px;
          background: #C0C4CC;
          display: inline-block;
          margin: 0 8px;
          color: 000000;
        }
</style>

