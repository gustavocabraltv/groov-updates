<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">


<style>

  /* Bullet ativo (cor personalizada) */
.swiper-pagination-bullet-active {
    background-color: #1C67F3 !important;
}




  .swiper-button-next {
    margin-right: 32px;
    width: fit-content!important;
  }
  .swiper-button-prev {
    margin-left: 32px;
    width: fit-content!important;
  }


      .swiper-button-next,
      .swiper-button-prev {
          {% comment %} display: none!important; {% endcomment %}
          {% comment %} display: flex!important; {% endcomment %}
          
      }
  .swiper {
    width: 100%;
    height: 420px;
    position: relative;
  }

  @media screen and (max-width: 481px) {
    .swiper { 
      height: 650px;
    }
  }

  .swiper-slide {
    background: #ddd;
    
  }

  {% comment %} .swiper-button-next,
  .swiper-button-prev {
    color: white !important;
    z-index: 9999 !important;
    display: block !important;
    position: absolute !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
  } {% endcomment %}


  .swiper-button-next {
    right: 10px;

  }

  .swiper-button-prev {
    left: 10px;
  }
  .swiper-button-next::after {
    display: none!important;
  }

  .swiper-button-prev::after {
    display: none!important;
  }



  .banner-desktop-01 {
    background-image: url('{{ "banner-01.png" | asset_url }}');
  }

  @media (max-width: 767px) {
    .banner-desktop-01 {
      background-image: url('{{ "banner-01-mobile.png" | asset_url }}');
    }
    }

            .banner-desktop-02 {
                background-image: url('{{ "banner-02.png" | asset_url }}');
            }

            @media (max-width: 767px) {
            .banner-desktop-02 {
                background-image: url('{{ "banner-02-mobile.png" | asset_url }}');
                }
            }
                

    .swiper-pagination { 
        
        padding: 8px 18px;
        border-radius: 50px;
        display: flex;
        width: fit-content!important;

     
        position: absolute!important;
        left: 50%!important;
        transform: translateX(-50%)!important;
        margin-bottom: 16px;
    }

  }
</style>

