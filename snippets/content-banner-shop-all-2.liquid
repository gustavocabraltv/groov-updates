    </div>
  </div>
  
  <div class="swiper-button-next !tw-hidden lg:!tw-flex">
    <div class="tw-w-[50px] tw-h-[50px] tw-rounded-full tw-bg-[white] tw-flex tw-justify-center tw-items-center">
      <img src="{{  'next-arrow.svg' | asset_url }}" width="10" height="auto">
