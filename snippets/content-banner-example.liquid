<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">


<style>
    .swiper-button-next,
    .swiper-button-prev {
        display: none!important;
    }
  .swiper {
    width: 100%;
    height: 650px;
    position: relative;
  }

  .swiper-slide {
    background: #ddd;
    
  }

  {% comment %} .swiper-button-next,
  .swiper-button-prev {
    color: white !important;
    z-index: 9999 !important;
    display: block !important;
    position: absolute !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
  } {% endcomment %}


  .swiper-button-next {
    right: 10px;

  }

  .swiper-button-prev {
    left: 10px;
  }
  .swiper-button-next::after {
    display: none!important;
  }


  .banner-desktop-01 {
    background-image: url('{{ "banner-01.png" | asset_url }}');
  }

  @media (max-width: 767px) {
    .banner-desktop-01 {
      background-image: url('{{ "banner-01-mobile.png" | asset_url }}');
    }
    }

            .banner-desktop-02 {
                background-image: url('{{ "banner-02.png" | asset_url }}');
            }

            @media (max-width: 767px) {
            .banner-desktop-02 {
                background-image: url('{{ "banner-02-mobile.png" | asset_url }}');
                }
            }
                

    .swiper-pagination { 
        background: white;
        padding: 8px 18px;
        border-radius: 50px;
        display: flex;
        width: fit-content!important;

     
        position: absolute!important;
        left: 50%!important;
        transform: translateX(-50%)!important;
        margin-bottom: 16px;
    }

  }
</style>

<!-- Swiper HTML -->
<div class="swiper mySwiper">
  <div class="swiper-wrapper">
    <div class="swiper-slide">
        <div 
            class="tw-bg-blue tw-full tw-h-full tw-bg-cover tw-bg-center banner-desktop-01"
            
        >
            <div class="page-width tw-h-full">
                <div class="tw-w-full tw-h-full tw-flex">
                    <div 
                        class="
                        tw-flex 
                        tw-flex-col 
                        tw-justify-start 
                        tw-items-center 
                        tw-w-full 
                        tw-text-center
                        tw-pt-[32px]

                        lg:tw-justify-center
                        lg:tw-items-start
                        lg:tw-text-left
                        ">
                        <p class="tw-text-[#53ABF9] tw-mb-[16px]">NEW ARRIVAL</p>
                        <h2 
                            class="tw-text-white tw-text-[40px] lg:tw-text-[48px] tw-leading-none 
                            tw-text-center
                            lg:tw-text-left
                            tw-mb-[18px]
                            ">The Response,<br/> by Groov</h2>
                        <p class="tw-text-[white]">Just $149</p>
                        <a 
                            href="/products/the-everyday"
                            class="
                            tw-mt-[40px] tw-font-normal tw-text-[16px] tw-bg-white tw-py-[8px] tw-px-[32px] tw-text-black tw-rounded-full">Buy Now
                        </a>
                    </div>
                  
                </div>
            </div>

        </div>
    </div>


    <div class="swiper-slide">
        <div 
            class="tw-bg-blue tw-full tw-h-full tw-bg-cover tw-bg-center banner-desktop-02"
            
        >
            <div class="page-width tw-h-full">
                <div class="tw-w-full tw-h-full tw-flex">
                    <div 
                        class="
                        tw-flex 
                        tw-flex-col 
                        tw-justify-start 
                        tw-items-center 
                        tw-w-full 
                        tw-text-center
                        tw-pt-[32px]

                        lg:tw-justify-center
                        lg:tw-items-start
                        lg:tw-text-left
                        ">
                        <p class="tw-text-white  tw-mb-[16px]">NEW ARRIVAL</p>
                        <h2 
                            class="tw-text-white tw-text-[40px] lg:tw-text-[48px] tw-leading-none 
                            tw-text-center
                            lg:tw-text-left
                            tw-mb-[18px]
                            ">The Response,<br/> by Groov</h2>
                        <p class="tw-text-[white]">Just $149</p>
                        <a 
                            href="/products/the-everyday"
                            class="
                            tw-mt-[40px] tw-font-normal tw-text-[16px] tw-bg-black tw-py-[8px] tw-px-[32px] tw-text-white tw-rounded-full">Buy Now
                        </a>
                    </div>
                  
                </div>
            </div>

        </div>
    </div>

  </div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"><svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"> <polygon points="9,6 15,12 9,18" fill="black"/> </svg></div>
  <div class="swiper-pagination"></div>
</div>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

{% javascript %}
  document.addEventListener("DOMContentLoaded", function () {
    const swiper = new Swiper('.mySwiper', {
      loop: true,
    //   navigation: {
    //     nextEl: '.swiper-button-next',
    //     prevEl: '.swiper-button-prev',
    //   },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      slidesPerView: 1,
      spaceBetween: 10,
    });
  });
{% endjavascript %}
